{
	"include": ["src", "types", "configs", "scripts"],
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"importHelpers": true,
		"declaration": true,
		"sourceMap": true,
		"rootDir": "./",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"*": ["src/*", "node_modules/*", "configs/*", "scripts/*"]
		},
		"jsx": "react",
		"esModuleInterop": true
	}
}
